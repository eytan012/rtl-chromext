{
  "manifest_version": 3,
  "name": "RTL Page Converter",
  "description": "Convert any webpage to Right-to-Left (RTL) format",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "favicon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "128": "favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
